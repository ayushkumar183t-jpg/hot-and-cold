    <script>
        // Function to pre-select item when clicking "Order Now" on a card
        function orderItem(itemName) {
            const select = document.getElementById('itemSelect');
            select.value = itemName;
            // Smooth scroll to form
            document.getElementById('contact').scrollIntoView({behavior: 'smooth'});
        }

        // Function to handle form submission
        function submitOrder(event) {
            event.preventDefault();
            
            const name = document.getElementById('name').value;
            const item = document.getElementById('itemSelect').value;

            // In a real website, this would send data to a server
            alert(`Thank you, ${name}! \nYour order for ${item} has been placed successfully.\nWe will contact you shortly for payment.`);
            
            // Reset form
            document.getElementById('orderForm').reset();
        }
    </script>

